<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent" android:layout_marginLeft="12dp" android:layout_marginRight="20dp">

        <ImageView
            android:id="@+id/AS_item_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/AS_item_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/AS_item_image"
            android:textAppearance="?android:attr/textAppearanceLarge" android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/AS_item_subtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/AS_item_label"
            android:textAppearance="?android:attr/textAppearanceSmall" android:layout_marginLeft="15dp" android:layout_marginTop="3dp" android:paddingBottom="7dp" android:layout_toRightOf="@id/AS_item_image"/>
    </RelativeLayout>

</LinearLayout>