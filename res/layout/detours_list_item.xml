<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="wrap_content"
	android:layout_height="match_parent" android:id="@+id/showStopsLinearLayout">
	<TextView android:id="@+id/SD_routes" android:layout_height="wrap_content"
		android:layout_width="wrap_content" android:paddingTop="5dp"
		android:paddingLeft="15dp" android:paddingRight="15dp" android:textSize="22sp" android:textColor="@color/Red"></TextView>
	<TextView android:id="@+id/SD_description"
		android:layout_height="wrap_content" android:layout_width="wrap_content"
		android:paddingTop="5dp" android:textSize="16sp" android:paddingLeft="15dp"
		android:paddingBottom="10dp" android:paddingRight="15dp" android:textColor="#404040"></TextView>
</LinearLayout>